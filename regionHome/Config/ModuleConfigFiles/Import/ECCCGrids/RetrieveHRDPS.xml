<generalAdapterRun xmlns="http://www.wldelft.nl/fews" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.wldelft.nl/fews http://fews.wldelft.nl/schemas/version1.0/generalAdapterRun.xsd">
	<general>
		<piVersion>1.8</piVersion>
		<rootDir>%REGION_HOME%/modules/pyscripts</rootDir>
		<workDir>%ROOT_DIR%/work</workDir>
		<exportDir>$IMPORT_FOLDER$/HRDPS</exportDir>
		<importDir>$IMPORT_FOLDER$/HRDPS</importDir>
		<dumpFileDir>$GA_DUMPFILEDIR$</dumpFileDir>
		<dumpDir>%ROOT_DIR%/work</dumpDir>
		<diagnosticFile>%ROOT_DIR%/work/get_ec_forecasts_log.xml</diagnosticFile>
		<convertDatum>false</convertDatum>
	</general>
	<activities>
<!--		<startUpActivities>
			<purgeActivity>
				<filter>%ROOT_DIR%/work/*.*</filter>
			</purgeActivity>
		</startUpActivities>
-->		<exportActivities>
			<exportRunFileActivity>
				<exportFile>%WORK_DIR%/get_ec_forecasts_run.xml</exportFile>
				<properties>
					<string key="destinationDir" value="$IMPORT_FOLDER$/HRDPS"/>
				</properties>
			</exportRunFileActivity>
		</exportActivities>
		<executeActivities>
			<!--Download of Accumulated Precipitation (APCP_SFC_0)-->
			<!--  Uncomment to run through python rather than as an exe (then comment the exe block below)	-->
			<executeActivity>
				<command>
					<executable>$PYTHON_EXE$</executable>
				</command>
				<arguments>
					<argument>%ROOT_DIR%/bin/get_ec_forecasts.py</argument>
					<argument>--runInfoFile</argument>
					<argument>%WORK_DIR%/get_ec_forecasts_run.xml</argument>
					<argument>--model</argument>
					<argument>HRDPS</argument>
					<argument>--parameter</argument>
					<argument>APCP_Sfc</argument>
					<argument>--leadTime</argument>
					<argument>48</argument>
					<argument>--firstLeadTime</argument>
					<argument>1</argument>
					<argument>--delay</argument>
					<argument>6</argument>
				</arguments>
				<timeOut>900000</timeOut>
				<ignoreDiagnostics>true</ignoreDiagnostics>
			</executeActivity>
			<!--Download of Temperature at 2 meter (TMP_TGL_2m)-->
			<executeActivity>
				<command>
					<executable>$PYTHON_EXE$</executable>
				</command>
				<arguments>
					<argument>%ROOT_DIR%/bin/get_ec_forecasts.py</argument>
					<argument>--runInfoFile</argument>
					<argument>%WORK_DIR%/get_ec_forecasts_run.xml</argument>
					<argument>--model</argument>
					<argument>HRDPS</argument>
					<argument>--parameter</argument>
					<argument>TMP_AGL-2m</argument>
					<argument>--leadTime</argument>
					<argument>48</argument>
					<argument>--firstLeadTime</argument>
					<argument>0</argument>
					<argument>--delay</argument>
					<argument>6</argument>
				</arguments>
				<timeOut>900000</timeOut>
				<ignoreDiagnostics>true</ignoreDiagnostics>
			</executeActivity>
		</executeActivities>
	</activities>
</generalAdapterRun>
